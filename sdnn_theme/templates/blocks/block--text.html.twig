{#
/**
 * @file
 * Text block template.
 */
#}

{% if content.field_align|render|striptags|trim == 'Left' %}
	{% 
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
    'text-left',
  ]
  %}
{% endif %}

{% if content.field_align|render|striptags|trim == 'Center' %}
	{% 
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
    'text-center',
  ]
	%}
{% endif %}

{% if content.field_align|render|striptags|trim == 'Right' %}
	{% 
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
    'text-right',
  ]
	%}
{% endif %}

{{ attach_library("sdnn_theme/text") }}
<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {% if label %}
    <h2{{ title_attributes }}>{{ label }}</h2>
  {% endif %}
  {{ title_suffix }}

	{{ content.body }}
	{{ content.field_cta }}
</div>
