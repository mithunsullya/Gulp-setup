{#
/**
* @file
* Template override for paragraph paragraph cards.
*/
#}
{% extends "paragraph.html.twig" %}
{% block content %}
{% if paragraph.field_card_type.value == '0' %}
  {% set classes= ['carousel-card', 'cards'] %}
{% else %}
  {% set classes= ['plain-card', 'cards'] %}
{% endif %}

<div{{ attributes.addClass(classes) }}>
  {% if content.field_title|render|striptags %}
  <div class="cards__title">
    {{ content.field_title }}
  </div>
  {% endif %}
  {% if content.field_description|render|striptags %}
  <div class="cards__description">
    {{ content.field_description }}
  </div>
  {% endif %}
  {% if content.field_card_object|render|striptags %}
    <div class="cards__card-objects">
      {{ content.field_card_object }}
    </div>
  {% endif %}
</div>
{% endblock %}
