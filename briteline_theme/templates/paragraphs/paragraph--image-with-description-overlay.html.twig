{#
/**
 * @file
 * Theme implementation to display news, featured news view mode.
#}

<div class="image-overlay-description">
  {% if content.field_image %}
    <div class="image-overlay-description__image">
        {{ content.field_image }}
      <div class="image-overlay-description__content">
        {% if content.field_description|render|striptags %}
          <div class="content__description">
            {{ content.field_description }}
          </div>
        {% endif %}
      </div>
    </div>
  {% endif %}
</div>
