{% extends "paragraph.html.twig" %}
{% block content %}
<div class="simage-container">
  <div class="layout-container">
    <div class="simage-wrapper">
      <div class="simage-wrapper__title">
        {{ content.field_title }}
      </div>
      {% if content.field_description|render|striptags %}
        <div class="simage-wrapper__description">
          {{ content.field_description }}
        </div>
      {% endif %}
      {% if content.field_sidebar_image_wrapper|render|striptags %}
        <div class="simage-wrapper__content">
          {{ content.field_sidebar_image_wrapper }}
        </div>
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}
