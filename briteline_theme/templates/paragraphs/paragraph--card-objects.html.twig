{#
/**
* @file
* Template override for paragraph paragraph card objects.
*/
#}

<div class="card-object">
  {% if content.field_card_image|render|striptags %}
  <div class="card-object__image">
    {{ content.field_card_image }}
  </div>
  {% endif %}
  {% if content.field_title or content.field_description %}
    <div class="card-object__content">
      {% if content.field_title %}
        <div class="content__title">
          {{ content.field_title }}
        </div>
      {% endif %}
      {% if content.field_description %}
        <div class="content__description">
          {{ content.field_description }}
        </div>
      {% endif %}
    </div>
  {% endif %}
</div>
