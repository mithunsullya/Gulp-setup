{#
/**
* @file
* Template override for paragraph service image with description.
*/
#}

<div class="simage-description">
  <div class="simage-description__image">
    {{content.field_service_image}}
  </div>
  <div class="simage-description__content">
    {%if content.field_title %}
      <div class="content__title">
        {{ content.field_title }}
      </div>
    {% endif %}
    {% if content.field_description %}
      <div class="content__summary">
        {{ content.field_description }}
      </div>
    {% endif %}
  </div>
</div>
